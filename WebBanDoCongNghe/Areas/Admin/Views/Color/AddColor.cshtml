@model WebBanDoCongNghe.Models.tb_Color
@{
    ViewBag.Title = "AddColor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home/Index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Color/IndexColor" class="nav-link">Màu sắc</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm màu sắc mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Color/IndexColor">Màu sắc</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-default">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin màu sắc mới</h3>
                        </div>
                        <div class="card-body">
                            <div class="bs-stepper linear">
                                <div class="bs-stepper-content">
                                    @using (Html.BeginForm("AddColor", "Color", FormMethod.Post, new { }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)
                                        <!-- your steps content here -->
                                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                                                <div class="form-group">
                                                   <label for="exampleInputFile">Ảnh màu</label>
                                                        <div class="input-group">
                                                            <div class="custom-file">
                                                                @Html.TextBoxFor(x => x.ImageColor, new { @id = "txtImage", @class = "form-control" })
                                                            </div>
                                                            <div class="input-group-append">
                                                                <input type="button" class=" btn btn-primary" value="Tải ảnh" onclick="BrowseSever('txtImage')"/>
                                                            </div>
                                                        </div>
                                                      @Html.ValidationMessageFor(x => x.ImageColor, null, new { @class = "text-danger" })
                                                </div>
                                                <div class="form-group">
                                                    <label for="TenColor">Tên màu</label>
                                                    @Html.TextBoxFor(x => x.TenColor, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.TenColor, null, new { @class = "text-danger" })
                                                </div>
                                                <div class="form-group">
                                                    <label for="Description">Mô tả</label>
                                                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                                                </div>
                                                <div class="form-group">
                                                    <a href="/Admin/Color/IndexColor" class="btn btn-danger">Quay lại</a>
                                                    <button type="submit" class="btn btn-primary">Tạo mới</button>
                                                </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
@section scripts{
    <script>
        function BrowseSever(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }
    </script>
}
