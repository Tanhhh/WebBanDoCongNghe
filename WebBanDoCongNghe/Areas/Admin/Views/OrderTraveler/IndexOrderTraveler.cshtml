
@{
    ViewBag.Title = "IndexOrderTraveler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home/Index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Danh sách đặt hàng</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách khách vãng lai đặt hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Danh sách đặt hàng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <!--.card-header -->
                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item"><a class="nav-link active" href="#OrderTraveler" data-toggle="tab">Mới</a></li>
                        <li class="nav-item"><a class="nav-link" href="#ConfirmOrderTraveler" data-toggle="tab">Đã xác nhận</a></li>
                        <li class="nav-item"><a class="nav-link" href="#PakageOrderTraveler" data-toggle="tab">Đã đóng gói</a></li>
                        <li class="nav-item"><a class="nav-link" href="#TransportOrderTraveler" data-toggle="tab">Đang vận chuyển</a></li>
                        <li class="nav-item"><a class="nav-link" href="#CompleteOrderTraveler" data-toggle="tab">Đã hoàn thành</a></li>
                        <li class="nav-item"><a class="nav-link" href="#CancelOrderTraveler" data-toggle="tab">Đã hủy</a></li>

                    </ul>
                </div>
                <!--/.card-header -->
                <!--.card-body -->
                <div class="card-body">
                    <!--.tab-content -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="OrderTraveler">
                            @Html.Action("OrderTraveler", "OrderTraveler")
                        </div>
                        <div class="tab-pane" id="ConfirmOrderTraveler">
                            @Html.Action("ConfirmOrderTraveler", "OrderTraveler")
                        </div>
                        <div class="tab-pane" id="PakageOrderTraveler">
                            @Html.Action("PakageOrderTraveler", "OrderTraveler")
                        </div>
                        <div class="tab-pane" id="TransportOrderTraveler">
                            @Html.Action("TransportOrderTraveler", "OrderTraveler")
                        </div>
                        <div class="tab-pane" id="CompleteOrderTraveler">
                            @Html.Action("CompleteOrderTraveler", "OrderTraveler")
                        </div>
                        <div class="tab-pane" id="CancelOrderTraveler">
                            @Html.Action("CancelOrderTraveler", "OrderTraveler")
                        </div>
                    </div>
                </div>
                <!--/.tab-content -->
            </div>
            <!--/.card-body -->
        </div>
    </div>
</section>


