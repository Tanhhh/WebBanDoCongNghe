@model WebBanDoCongNghe.Models.tb_NhanVien
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home/Index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/UserAdmin/Admin" class="nav-link">Danh sách admin</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật admin</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/UserAdmin/Admin">Danh sách admin</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="row">
        <div class="col-md-12">
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">Cập nhật thông tin admin</h3>
                </div>
                <div class="card-body">
                    <div class="bs-stepper linear">
                        <div class="bs-stepper-content">
                            @using (Html.BeginForm("EditAdmin", "UserAdmin", FormMethod.Post, new { }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(x => x.MaNhanVien)
                                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                                    <div class="form-group">
                                    <label for="TenBrand">Kích hoạt</label>
                                    @Html.DropDownListFor(model => model.IsActive, new[] { new SelectListItem { Value = "true", Text = "Kích hoạt" }, new SelectListItem { Value = "false", Text = "khóa tài khoản" } }, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label for="TenBrand">Tên nhân viên</label>
                                        @Html.TextBoxFor(x => x.TenNhanVien, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.TenNhanVien, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="TenBrand">Tài khoản</label>
                                        @Html.TextBoxFor(x => x.TaiKhoan, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.TaiKhoan, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="TenBrand">Mật khẩu</label>
                                        @Html.TextBoxFor(x => x.MatKhau, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.MatKhau, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="TenBrand">Email</label>
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="TenBrand">Số điện thoại</label>
                                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="TenBrand">Địa chỉ</label>
                                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Address, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="TenBrand">Giới tính</label>
                                        @Html.RadioButtonFor(x => x.GioiTinh, "Nam") Nam   @Html.RadioButtonFor(x => x.GioiTinh, "Nữ") Nữ  @Html.RadioButtonFor(x => x.GioiTinh, "Khác") Khác
                                    </div>
                                    <div class="form-group">
                                        <label for="TenBrand">Ngày sinh</label>
                                        @Html.EditorFor(x => x.NgaySinh, new { htmlAttributes = new { @class = "form-control form-input" } })
                                        @Html.ValidationMessageFor(x => x.NgaySinh, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <a href="/Admin/UserAdmin/Admin" class="btn btn-danger">Quay lại</a>
                                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>










