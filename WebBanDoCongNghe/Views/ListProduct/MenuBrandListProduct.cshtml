@model IEnumerable<WebBanDoCongNghe.Models.tb_Brand>


@if (Model != null && Model.Any())
{

    foreach (var item in Model)
    {
        if (ViewBag.brandId == item.MaBrand)
        {
            <li class="active"><a href="@Url.Action("ListProductByBrand",new {@id=item.MaBrand})"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.TenBrand<span>(@item.tb_Product.Count(n => n.IsActive == true && n.IsSoldOut == false && n.tb_Brand.TenBrand == item.TenBrand))</span></a></li>
        }
        else
        {
            <li><a href="@Url.Action("ListProductByBrand",new {@id=item.MaBrand})">@item.TenBrand<span>(@item.tb_Product.Count(n => n.IsActive == true && n.IsSoldOut == false && n.tb_Brand.TenBrand == item.TenBrand))</span></a></li>
        }

    }
}

